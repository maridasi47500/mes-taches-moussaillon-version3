<p id="notice"><%= notice %></p>

<h1>Videogames</h1>


    <% @videogames.each_slice(2).to_a.each do |videogames| %>
<div class="row">

    <% videogames.each do |videogame| %>
  <div class="col-sm-6">
        <%= image_tag videogame.image %>

        <p><%= videogame.name %></p>

        <p><%= link_to 'Show', videogame %></p>
        <p><%= link_to 'Edit', edit_videogame_path(videogame) %></p>
        <p><%= link_to 'Destroy', videogame, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    <% end %>
      </div>
    <% end %>

<br>

<%= link_to 'New Videogame', new_videogame_path %>

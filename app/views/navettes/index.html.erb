<p id="notice"><%= notice %></p>

<h1>Navettes du <%=params[:date]%></h1>
<p><%=@message%></p>

<table>
  <thead>
    <tr>
      <th>Compagnie</th>
      <th>Citya</th>
      <th>Cityb</th>
      <th>Go</th>
      <th>Back</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @navettes.each do |navette| %>
      <tr>
        <td><%= navette.citya.name %></td>
        <td><%= navette.cityb.name %></td>
        <td><%= navette.go %></td>
        <td><%= navette.back %></td>
        <td><%= link_to 'Show', navette %></td>
        <td><%= link_to 'Edit', edit_navette_path(navette) %></td>
        <td><%= link_to 'Destroy', navette, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Navette', new_navette_path %>

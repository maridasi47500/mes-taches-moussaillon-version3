<p id="notice"><%= notice %></p>

<h1>Contents</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Content</th>
      <th>Other data</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @contents.each do |content| %>
      <tr>
        <td><%= content.type %></td>
        <td><%= content.content %></td>
        <td><%= content.other_data_id %></td>
        <td><%= link_to 'Show', content %></td>
        <td><%= link_to 'Edit', edit_content_path(content) %></td>
        <td><%= link_to 'Destroy', content, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%=render "showcomments", commentsofthiscontent:content.comments%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


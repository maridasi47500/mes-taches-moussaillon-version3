<%= form_with(model: content, local: true) do |form| %>
  <% if content.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(content.errors.count, "error") %> prohibited this content from being saved:</h2>

      <ul>
        <% content.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :type %>
    <select name="content[type]" id="content_type">
	<option value="Tweet">tweet</option>
	<option value="FacebookPost">facebook post</option>
    </select>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>

  <div class="field">
    <%= form.label :other_data_id %>
    <%= form.number_field :other_data_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

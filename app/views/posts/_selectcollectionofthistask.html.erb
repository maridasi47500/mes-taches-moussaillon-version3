                <%=collection_radio_buttons(:anyname, :colidtask, @taskcollections,
                  "id", "name",
                 {:prompt => 'Please select the collection of this task'},{class:"btn btn-secondary-outline" }) do |ff|%>
                              <div class="carousel-item <%if ff.value.to_i == @taskcollections.first.id.to_i%>active<%end%>">
                        <%=ff.label(class: "btn card h-100", for: "mycollectionmytasksradio#{ff.value}") do%>

                <div class="card-deck">

                      <% collection = Taskcollection.find(ff.value)%>
                    
                        <div class="card-img-top card-img-top-250">
                            <img class="img-fluid" src="<%=collection.image%>" alt="<%=collection.name%>"/>
                                    <%=ff.radio_button(autocomplete:"off",id:"mycollectionmytasksradio#{ff.value}",class: "btn-check")%>

                        </div>
                        <div class="card-body pt-2">
                            <h6 class="small text-wide p-b-2"><%=collection.name%></h6>
                            <h2>
                            </h2>
                        </div>
                </div>
                    <%end%>

            </div>




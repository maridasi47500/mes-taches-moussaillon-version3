<%=content_for :myjscode do%>
<script>

function chercherbarcriteria(field,al){
$.ajax({url: '<%=json_barcriteria_path%>?name='+field.value, 
success:function(data){
al.innerHTML="<option></option>";
var value, id;
for (var i=0;i<data.length;i++){
id=data[i].id;
name=data[i].name;
al.innerHTML+="<option value='"+id+"'>"+name+"</option>";
}
}});
};
function selectbarcriteria(field,greatpeople){
$.ajax({url: '<%=barcriteria_barreviews_path%>?id='+field.value, 
success:function(data){
greatpeople.innerHTML+=data;
}});
};
function chercherscorecriteria(field,al){
$.ajax({url: '<%=json_scorecriteria_path%>?name='+field.value, 
success:function(data){
al.innerHTML="<option></option>";
var value, id;
for (var i=0;i<data.length;i++){
id=data[i].id;
name=data[i].name;
al.innerHTML+="<option value='"+id+"'>"+name+"</option>";
}
}});
};
function selectscorecriteria(field,greatpeople){
$.ajax({url: '<%=scorecriteria_barreviews_path%>?id='+field.value, 
success:function(data){
greatpeople.innerHTML+=data;
}});
};
</script>
<%end%>


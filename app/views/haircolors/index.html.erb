<p id="notice"><%= notice %></p>

<h1>Haircolors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @haircolors.each do |haircolor| %>
      <tr>
        <td><%= haircolor.name %></td>
        <td><%= link_to 'Show', haircolor %></td>
        <td><%= link_to 'Edit', edit_haircolor_path(haircolor) %></td>
        <td><%= link_to 'Destroy', haircolor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Haircolor', new_haircolor_path %>

<p id="notice"><%= notice %></p>

<h1>Repas</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Somme</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @repas.each do |repas| %>
      <tr>
        <td><%= repas.username %></td>
        <td><%= repas.somme %></td>
        <td><%= repas.date %></td>
        <td><%= link_to 'Show', repas %></td>
        <td><%= link_to 'Edit', edit_repas_path(repas) %></td>
        <td><%= link_to 'Destroy', repas, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


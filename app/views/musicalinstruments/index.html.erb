<p id="notice"><%= notice %></p>

<h1>Musical instruments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @musicalinstruments.each do |musicalinstrument| %>
      <tr>
        <td><%= musicalinstrument.name %></td>
        <td class="mymusicalinstruments"><%=link_to (image_tag musicalinstrument.image, class: "imageprofilethread").html_safe, musicalinstrument %></td>
        <td><%= musicalinstrument.description %></td>
        <td><%= link_to 'Show', musicalinstrument %></td>
        <td><%= link_to 'Edit', edit_musicalinstrument_path(musicalinstrument) %></td>
        <td><%= button_to 'Destroy', musicalinstrument, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


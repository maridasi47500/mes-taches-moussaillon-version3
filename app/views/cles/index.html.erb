<p id="notice"><%= notice %></p>

<h1>Cles</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Perception</th>
      <th>Reintegration</th>
      <th>Armygrade</th>
      <th>Person</th>
      <th>Observation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cles.each do |cle| %>
      <tr>
        <td><%= l(cle.date) %></td>
        <td><%= l(cle.perception,format: :veryshort) %></td>
        <td><%= l(cle.reintegration,format: :veryshort) %></td>
        <td title="<%= cle.armygrade.try(:nom) %>"><%= cle.armygrade.try(:abbreviation) %></td>
        <td><%= cle.person.try(:name) %></td>
        <td><%= cle.observation %></td>
        <td><%= link_to 'Show', cle %></td>
        <td><%= link_to 'Edit', edit_cle_path(cle) %></td>
        <td><%= link_to 'Destroy', cle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


										<li class="info-nav__item">
									<a href="<%= I18n.t("footer.#{num}.#{secondnum}.url")%>" target="_blank" rel="noopener noreferrer"><%= I18n.t("footer.#{num}.#{secondnum}.title")%></a>
                                                                                </li>
								<%end%>
                                                                <%end%>
                                                                    </ul>

                                        </div>
                                    <%end%>
			
					</div>
			</div>

		</div>

	</div>

	<div class="footer__end">

		<div class="footer__end-wrap">

			<div class="footer__social">
				<div class="social social--wide social--flush">
					<ul class="social__list">
						<li class="social__item">
							<a class="social__link" href="http://www.facebook.com/primark" target="_blank">
								<i class="icon icon--facebook"></i>
								<span class="reader-only">Visita nuestra página de Facebook</span>
							</a>
						</li>
						<li class="social__item">
							<a class="social__link" href="https://www.twitter.com/primark" target="_blank">
								<i class="icon icon--twitter"></i>
								<span class="reader-only">Visita nuestra página de Twitter</span>
							</a>
						</li>
						<li class="social__item">
							<a class="social__link" href="http://www.pinterest.com/Primark/" target="_blank">
								<i class="icon icon--pinterest"></i>
								<span class="reader-only">Visita nuestra página de Pinterest</span>
							</a>
						</li>
						<li class="social__item">

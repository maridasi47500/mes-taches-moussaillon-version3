<%= form_with(model: word, local: true) do |form| %>
  <% if word.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(word.errors.count, "error") %> prohibited this word from being saved:</h2>

      <ul>
        <% word.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :word %>
    <%= form.text_field :word %>

  </div>
    <%=form.fields_for :meanings do |g|%>
  <div class="field">
    <%= g.label :content, "meaning of this word" %>
    <%= g.text_field :content %>


  </div>
  <div class="field">
    <%= g.label :_destroy, "destroy this meaning" %>
    <%= g.check_box :_destroy %>
  </div>
    <%end%>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

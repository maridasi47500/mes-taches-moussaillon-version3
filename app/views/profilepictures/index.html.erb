<p id="notice"><%= notice %></p>

<h1>Profilepictures</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Nameimage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profilepictures.each do |profilepicture| %>
      <tr>
        <td><%if profilepicture.name%><%= image_tag profilepicture.name, class:"imageprofilethread" %><%end%></td>
          
        <td><%= profilepicture.nameimage %></td>
        <td><%= link_to 'Show', profilepicture %></td>
        <td><%= link_to 'Edit', edit_profilepicture_path(profilepicture) %></td>
        <td><%= link_to 'Destroy', profilepicture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profilepicture', new_profilepicture_path %>

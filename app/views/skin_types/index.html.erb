<p id="notice"><%= notice %></p>

<h1>Skin Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @skin_types.each do |skin_type| %>
      <tr>
        <td><%= skin_type.name %></td>
        <td><%= link_to 'Show', skin_type %></td>
        <td><%= link_to 'Edit', edit_skin_type_path(skin_type) %></td>
        <td><%= link_to 'Destroy', skin_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


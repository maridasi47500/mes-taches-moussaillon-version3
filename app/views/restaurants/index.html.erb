<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>City</th>
      <th>Place</th>
      <th>State</th>
      <th>Description</th>
      <th>Country</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.image %></td>
        <td><%= restaurant.city_id %></td>
        <td><%= restaurant.place_id %></td>
        <td><%= restaurant.state_id %></td>
        <td><%= restaurant.description %></td>
        <td><%= restaurant.country_id %></td>
        <td><%= restaurant.longitude %></td>
        <td><%= restaurant.latitude %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


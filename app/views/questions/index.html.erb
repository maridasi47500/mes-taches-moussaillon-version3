<p id="notice"><%= notice %></p>

<h1>Questions</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.text %></td>
        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%=form_with url: new_question_path, html:{method: :get} do |form|%>
<%=label :nb, "creer une nouvelle question avec combien de reponses"%>
<%=text_field_tag :nb%>
<%=form.submit "nouvelle question"%>
<%end%>
<%= link_to 'New Question', new_question_path %>

<p><%=p.person.name%> - <%=p.school.name%> - <%=l(p.date, format: :long)%></p>
<%if p.photos.length > 0%>
<br>
<div id="mycarouselgraduation<%=p.id%>" 

class="carousel mycarousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
   <%p.photos.each_with_index do |t,o|%>
    <div class="carousel-item <%if o == 0%>active<%end%>">
      <img class="d-block w-100" src="/assets/<%=t.name%>" alt="First slide">
    </div>
    <%end%>

  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#mycarouselgraduation<%=p.id%>" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#mycarouselgraduation<%=p.id%>" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
<%end%>


<p id="notice"><%= notice %></p>

<h1>Radios</h1>

<table>
  <thead>
    <tr>
      <th>Frequency</th>
      <th>Radioname</th>
      <th>Motto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @radios.each do |radio| %>
      <tr>
        <td><%= radio.frequency %></td>
        <td><%= radio.radioname %></td>
        <td><%= radio.motto %></td>
        <td><%= link_to 'Show', radio %></td>
        <td><%= link_to 'Edit', edit_radio_path(radio) %></td>
        <td><%= link_to 'Destroy', radio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


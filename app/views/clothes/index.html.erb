<p id="notice"><%= notice %></p>

<h1>Clothes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clothes.each do |clothing| %>
      <tr>
        <td><%= render clothing %></td>
        <td><%= link_to 'Show', clothing %></td>
        <td><%= link_to 'Edit', edit_clothing_path(clothing) %></td>
        <td><%= button_to 'Destroy', clothing, method: :delete,  onclick: "return confirm('Are you sure?');" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Clothing', new_clothing_path %>

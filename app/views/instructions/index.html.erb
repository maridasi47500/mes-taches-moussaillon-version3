<%=content_for :mylittlecss do%>
.redborder {
border: 2px solid #ff0707;
}
<%end%>


<p id="notice"><%= notice %></p>

<h1>Instructions</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Other instruction</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @instructions.each do |instruction| %>

      <tr>
        <td class="<%= instruction.otherinstruction ? "" : "redborder"%>"><%= instruction.content %></td>
        
        <td><%if instruction.otherinstruction%><%=t('showpages.instruction.then')%> <%= instruction.otherinstruction.content %><%end%></td>
        <td><%= link_to 'Show', instruction %></td>
        <td><%= link_to 'Edit', edit_instruction_path(instruction) %></td>
        <td><%= link_to 'Edit and add instruction', edit_instruction_path(instruction, addinstruction: true) %></td>
        <td><%= link_to 'Rectify next instruction', nextinstruction_instruction_path(instruction.id) %></td>
        <td><%= link_to 'Destroy', instruction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Instruction', new_instruction_path %>

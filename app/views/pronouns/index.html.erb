<p id="notice"><%= notice %></p>

<h1>Pronouns</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pronouns.each do |pronoun| %>
      <tr>
        <td><%= pronoun.name %></td>
        <td><%= link_to 'Show', pronoun %></td>
        <td><%= link_to 'Edit', edit_pronoun_path(pronoun) %></td>
        <td><%= link_to 'Destroy', pronoun, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pronoun', new_pronoun_path %>

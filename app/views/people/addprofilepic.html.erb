<h2>Add new profile pic for <%=render @person%></h2>
<%= form_with(model: profilepicture, local: true) do |form| %>
  <% if profilepicture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profilepicture.errors.count, "error") %> prohibited this profilepicture from being saved:</h2>

      <ul>
        <% profilepicture.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "please load the profile picture" %>
    <%= form.file_field :name %>
  </div>
  <div hidden="true">
    <%= form.collection_check_boxes(:person_ids, [@person], :id, :name) do |b|%>
      <%=b.check_box(checked: true)%><%=b.label%>
    <%end%>
  </div>

  <div class="field">
    <%= form.label :nameimage, "What's on the pic? / who's on the pic?" %>
    <%= form.text_field :nameimage %>
  </div>
  <div class="field">
    <%= form.label :description, "Donnez des DÃ©tails" %>
    <%= form.text_area :description %>
  </div>
  <div class="field">
    <%= form.label :album_id %>
    <%= form.collection_select(:album_id, Album.all, :id, :name_with_sailor, prompt: true, include_blank: true) do |f| %>
      <%= render Person.find(f.value)%>
      <%end%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

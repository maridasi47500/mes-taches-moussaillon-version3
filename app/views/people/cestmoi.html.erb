<%=content_for :mylittlecss do%>
  <%@person.profilepics.each_with_index do |p,i|%>

    .pic<%=i%>{
      width:300px;
      height:240px;
      background: url(<%=p.name%>) no-repeat center / contain;
      border:5px solid #000000;
    }
    .pic<%=i%> > .green,  .pic<%=i%> > .red, .pic<%=i%> > .yellow
    {
      width:300px;
      height:240px;
      top:75px;
      opacity:0;
    }
    .pic<%=i%> .green {
      background:url(/assets/smoke10.png) no-repeat center / contain;
    }
    .pic<%=i%> .red {
      background:url(/assets/smoke19.png) no-repeat center / contain;
    }
    .pic<%=i%> .yellow {
      background:url(/assets/smoke16.png) no-repeat center / contain;
    }
    .pic<%=i%>:hover .red,.pic<%=i%>:hover .yellow,.pic<%=i%>:hover .green
    {
      opacity:0.9;
    }
<%end%>
<%end%>

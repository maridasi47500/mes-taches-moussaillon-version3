<p id="notice"><%= notice %></p>

<h1>Prejudices</h1>

<table>
  <thead>
    <tr>
      <th>Content </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prejudices.each do |prejudice| %>
      <tr>
        <td><%= prejudice.content %></td>
        <td><%= link_to 'Show', prejudice %></td>
        <td><%= link_to 'Edit', edit_prejudice_path(prejudice) %></td>
        <td><%= link_to 'Destroy', prejudice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Prejudice', new_prejudice_path %>


<%=form_with html: {method:'get',id: "mytwitteraccount"} do |f| %>
<div class="field"><%=f.label :keyword, "search tweets by keyword" %><%= f.text_field :keyword, value: params[:keyword] %></div>
<div class="field"><%=f.label :myid, "search tweets by id" %><%= f.text_field :myid, value: params[:myid] %></div>
<div class="field"><%= f.select("taccount", Twitteraccount.all.collect {|p| [ p.name, p.id ] }, { selected: params[:taccount], include_blank: 'twitter account name' }, {onchange: "$('#mytwitteraccount').submit();"})%></div>
<div class="field"><%= f.select("tlang", I18n.available_locales.excluding(:frimages).map{|p| [ t('langname.'+p.to_s), p ] }, { selected: params[:tlang], include_blank: 'langue' }, {onchange: "$('#mytwitteraccount').submit();"})%></div>
<%=f.submit "search"%>
<%end%>
<%if @tweetstwitter[0]%>
<br>
<p><%=@tweetstwitter[0].user.description%></p>
<br>
<%end%>


<p id="notice"><%= notice %></p>

<h1>Programming languages</h1>
<div class="myprogram1">
<%@time=1500%>
<%@programminglanguages.first(3).each_with_index do |a,i| %>
<img src="<%=a.image%>" width=100 height=100 class="mypic<%=i+1%>"/>
<script>
setTimeout(() => {
  $(".myprogram1 img")[0].remove();
}, <%=@time%>)

</script>
<%@time+=2000%>
<%end%>

</div>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @programminglanguages.each do |programminglanguage| %>
      <tr class="<%=cycle("lang1","lang2")%>">
        <td><%= programminglanguage.name %></td>
        <td><%= image_tag programminglanguage.image, class: 'imageprofilethread' %></td>
        <td><%= programminglanguage.description %></td>
        <td><%= link_to 'Show', programminglanguage %></td>
        <td><%= link_to 'Edit', edit_programminglanguage_path(programminglanguage) %></td>
        <td><%= link_to 'Destroy', programminglanguage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Programminglanguage', new_programminglanguage_path %>

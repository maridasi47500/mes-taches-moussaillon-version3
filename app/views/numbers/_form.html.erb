<%= form_with(model: number, local: true) do |form| %>
  <% if number.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(number.errors.count, "error") %> prohibited this number from being saved:</h2>

      <ul>
        <% number.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :mytype %> distance, quantitywater
    <%= form.select :mytype, options_for_select(I18n.t("myunits").keys.map{|h|[I18n.t("myunitsname.#{h}"),h]}),{include_blank: true} %>
  </div>

 
  <div class="field">
    <%= form.label :myvalue %> (unit)
    <%= form.text_field :myvalue %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

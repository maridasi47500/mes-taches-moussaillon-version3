<p id="notice"><%= notice %></p>

<h1>Aidememoires</h1>

<table>
  <thead>
    <tr>
      <th>Recordingphrase</th>
      <th>Recordingword</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @aidememoires.each do |aidememoire| %>
      <tr>
        <td><%= render 'recordings/recordingsimple', recording: aidememoire.recordedphrase %></td>
        <td><%= render 'recordings/recordingsimple', recording: aidememoire.recordedword %></td>
        <td><%= link_to 'Show', aidememoire %></td>
        <td><%= link_to 'Edit', edit_aidememoire_path(aidememoire) %></td>
        <td><%= link_to 'Destroy', aidememoire, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Aidememoire', new_aidememoire_path %> | 
<%=render "indexpage/pagination",g:params[:page].to_i, modelname: Aidememoire,mypath: aidememoires_path+'?'%>


<p id="notice"><%= notice %></p>

<h1>Linkpeople</h1>

<table>
  <thead>
    <tr>
      <th>Name en</th>
      <th>Name fr</th>
      <th>Name de</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @linkpeople.each do |linkperson| %>
      <tr>
        <td><%= linkperson.name_en %></td>
        <td><%= linkperson.name_fr %></td>
        <td><%= linkperson.name_de %></td>
        <td><%= link_to 'Show', linkperson %></td>
        <td><%= link_to 'Edit', edit_linkperson_path(linkperson) %></td>
        <td><%= link_to 'Destroy', linkperson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Linkperson', new_linkperson_path %>

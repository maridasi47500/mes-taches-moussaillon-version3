<p id="notice"><%= notice %></p>

<h1>Collections</h1>

    <% @collections.each_slice(2).to_a.each do |site| %>
<div class="row">

    <% site.each do |collection| %>
  <div class="col-sm-6">

        <p><%= render collection %></p>
        <p><%= link_to 'Show', collection %></p>
        <p><%= link_to 'Edit', edit_collection_path(collection) %></p>
        <p><%= link_to 'Destroy', collection, method: :delete, data: { confirm: 'Are you sure?' } %></p>
</div>
    <% end %>
</div>
    <% end %>

<br>


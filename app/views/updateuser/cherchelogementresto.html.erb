<%=form_with url: reserver_path do |form|%>
<%=form.hidden_field :personid, value: params[:personid]%>
<%=form.hidden_field :cityid, value: params[:cityid]%>
<%=form.hidden_field :logementid, value: @logementid%>
<%=form.hidden_field :restoid, value: @restoid%>
<%if params['logement.x']%>
<%Hotel.findbycityid(params[:cityid]).each do |person|%>
<input id="<%=person.name.parameterize+person.id.to_s%>" name="<%=person.id%>hotel" type="image" width="100" height="100" alt="<%=person.name%>"
title="<%=person.name%>"
       src="<%=person.image%>">
<%end%>

<%elsif params['resto.x']%>
<%Restaurant.findbycityid(params[:cityid]).each do |person|%>
<input id="<%=person.name.parameterize+person.id.to_s%>" name="<%=person.id%>resto" type="image" width="100" height="100" alt="<%=person.name%>"
title="<%=person.name%>"
       src="<%=person.image%>">
<%end%>
<%end%>
<%end%>
